#!/bin/bash

LINK="https://github.com/jasut1n/prism-att&ck-framework"
OS=$(uname -o | grep -o "Android")
NAME="prism att&ck"

function START() {
echo -e "${C2}(${R0}>${C2})${R0} Updating..."
}


function COMPLETE() {
echo -e "${C2}(${R0}>${C2})${R0} Updating compelete."
}


function ALREADY() {
echo -e "${C4}(${R0}>${C4})${R0} Installed Files Not Exists
=> use -i for install."
}

function forTermux () {
  if [ -d "${presentDIR}" ]
then
cd ${presentDIR}
git stash &> /dev/null
git pull
else
ALREADY
fi
}

function forLinux () {
  if [ -d "${presentDIR}" ]
then
cd ${presentDIR}
git stash &> /dev/null
git pull
else
ALREADY
fi
}

if [[ $OS == *'Android'* ]];then

if [[ ! -f "${PREFIX}/etc/prisminstall.conf" ]]
then
  presentDIR=""
else
  source ${PREFIX}/etc/prisminstall.conf
  presentDIR="${installDIR}"
fi

  forTermux
else

if [[ ! -f "/etc/prisminstall.conf" ]]
then
  presentDIR=""
else
  source /etc/prisminstall.conf
  presentDIR="${installDIR}"
fi

forLinux
fi
